<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActive">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="8dp"
            android:text="This is patient's personal information: "
            android:layout_marginTop="8dp"/>

    <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Name"
            android:inputType="text"
            android:maxLength="20"
            android:textStyle="bold" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
    />

    <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Email"
            android:inputType="text"
            android:maxLength="30"
            android:textStyle="bold" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
    />

    <EditText
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Gender"
            android:inputType="text"
            android:maxLength="20"
            android:textStyle="bold" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
    />

    <EditText
            android:id="@+id/dateofbirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Date of Birth"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:textStyle="bold" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
    />
    <Button
            android:id="@+id/button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="#83D8FF"
            android:layout_marginBottom="8dp"
    />

    <TextView
            android:id="@+id/textView_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"/>

    <Button
            android:id="@+id/next_id"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:onClick="Next"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="#64ffda"
            android:layout_marginBottom="8dp"
    />

</LinearLayout>